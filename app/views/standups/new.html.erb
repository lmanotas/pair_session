<%= form_for @standup do |f| %>
  <label>
    Location
  </label>
  <%= f.text_field :location %>

  <label>
    Time
  </label>
  <div class="form-group">
    <%= f.datetime_select :time, {}, class: "input-sm" %>
  </div>

  <label>
    Organisers
  </label>
  <%= f.collection_select :organiser_1_employee_id, Employee.all, :id, :name, prompt: true %>
  <%= f.collection_select :organiser_2_employee_id, Employee.all, :id, :name, prompt: true %>

  <ul>
    <%= f.fields_for :standup_attendees do |a| %>
      <li>
        <%= a.collection_select :employee_id, Employee.all, :id, :name, prompt: true %>
      </li>
    <% end %>
  </ul>

  <%= f.submit %>
<% end %>
